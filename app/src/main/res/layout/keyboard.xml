<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">

    <TableRow>

        <Button
            android:id="@+id/clear"
            android:background="@drawable/keyboard_background"
            android:text="C"
            android:textColor="@color/colorClear" />

        <Button
            android:id="@+id/delete"
            android:background="@drawable/keyboard_background"
            android:text="←"
            android:textColor="@color/colorClear" />

        <Button
            android:id="@+id/remainder"
            android:background="@drawable/keyboard_background"
            android:text="%"
            android:textColor="@color/colorClear" />

        <Button
            android:id="@+id/divider"
            android:background="@drawable/keyboard_background"
            android:text="/"
            android:textColor="@color/colorClear" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/num_7"
            android:background="@drawable/keyboard_background"
            android:text="7"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_8"
            android:background="@drawable/keyboard_background"
            android:text="8"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_9"
            android:background="@drawable/keyboard_normal"
            android:text="9"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/multi"
            android:background="@drawable/keyboard_background"
            android:text="*"
            android:textColor="@color/colorClear" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/num_4"
            android:background="@drawable/keyboard_background"
            android:text="4"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_5"
            android:background="@drawable/keyboard_background"
            android:text="5"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_6"
            android:background="@drawable/keyboard_normal"
            android:text="6"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/sub"
            android:background="@drawable/keyboard_background"
            android:text="-"
            android:textColor="@color/colorClear" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/num_1"
            android:background="@drawable/keyboard_background"
            android:text="1"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_2"
            android:background="@drawable/keyboard_background"
            android:text="2"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_3"
            android:background="@drawable/keyboard_normal"
            android:text="3"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/sum"
            android:background="@drawable/keyboard_background"
            android:text="+"
            android:textColor="@color/colorClear" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/num_0"
            android:layout_span="2"
            android:background="@drawable/keyboard_background"
            android:text="0"
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/num_dot"
            android:background="@drawable/keyboard_background"
            android:text="."
            android:textColor="@color/colorNum" />

        <Button
            android:id="@+id/equl"
            android:background="@drawable/keyboard_background"
            android:text="="
            android:textColor="@color/colorClear" />
    </TableRow>

</TableLayout>
