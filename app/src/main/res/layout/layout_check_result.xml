<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/layout_actionbar"/>
    <RelativeLayout
        android:layout_height="48dp"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="30秒后自动关闭"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@color/actionbar_color"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Title"
            android:textSize="20sp"
            android:textColor="@color/actionbar_color"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_centerInParent="true"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/resutl_text_bg"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <ImageView
                            android:id="@+id/img_yd"
                            android:layout_height="12dp"
                            android:layout_width="12dp"
                            android:background="@color/cadetblue"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_yd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/cadetblue"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_yd"
                            android:text="应到人数:10人"
                            android:maxLines="1"
                            android:layout_alignBaseline="@+id/img_yd"
                            android:layout_marginLeft="4dp"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <ImageView
                            android:id="@+id/img_yqd"
                            android:layout_height="12dp"
                            android:layout_width="12dp"
                            android:background="@color/cadetblue"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_yqd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/cadetblue"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_yqd"
                            android:text="已签到人数:10人"
                            android:maxLines="1"
                            android:layout_alignBaseline="@+id/img_yqd"
                            android:layout_marginLeft="4dp"
                            />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <ImageView
                            android:id="@+id/img_wqd"
                            android:layout_height="12dp"
                            android:layout_width="12dp"
                            android:background="@color/cadetblue"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_wqd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/cadetblue"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_wqd"
                            android:text="未签到人数:10人"
                            android:maxLines="1"
                            android:layout_alignBaseline="@+id/img_wqd"
                            android:layout_marginLeft="4dp"
                            />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <ImageView
                            android:id="@+id/img_qdl"
                            android:layout_height="12dp"
                            android:layout_width="12dp"
                            android:background="@color/cadetblue"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_qdl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/cadetblue"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_qdl"
                            android:text="签到率:20%"
                            android:maxLines="1"
                            android:layout_alignBaseline="@+id/img_qdl"
                            android:layout_marginLeft="4dp"
                            />


                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/resutl_text_bg"
                    >
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_ty"
                                android:layout_height="12dp"
                                android:layout_width="12dp"
                                android:background="@color/cadetblue"
                                android:layout_centerVertical="true"
                                />
                            <TextView
                                android:id="@+id/tv_ty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/cadetblue"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/img_ty"
                                android:text="同意 10"
                                android:maxLines="1"
                                android:layout_alignBaseline="@+id/img_ty"
                                android:layout_marginLeft="4dp"
                                />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_fd"
                                android:layout_height="12dp"
                                android:layout_width="12dp"
                                android:background="@color/cadetblue"
                                android:layout_centerVertical="true"
                                />
                            <TextView
                                android:id="@+id/tv_fd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/cadetblue"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/img_fd"
                                android:text="反对 10"
                                android:maxLines="1"
                                android:layout_alignBaseline="@+id/img_fd"
                                android:layout_marginLeft="4dp"
                                />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            >
                            <ImageView
                                android:id="@+id/img_qq"
                                android:layout_height="12dp"
                                android:layout_width="12dp"
                                android:background="@color/cadetblue"
                                android:layout_centerVertical="true"
                                />
                            <TextView
                                android:id="@+id/tv_qq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/cadetblue"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/img_qq"
                                android:text="弃权 10"
                                android:maxLines="1"
                                android:layout_alignBaseline="@+id/img_qq"
                                android:layout_marginLeft="4dp"
                                />


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/tgl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="设置通过率:"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_tgl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="51%"
                    android:layout_toRightOf="@+id/tgl"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:id="@+id/dqtgl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="当前通过率:"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_dqtgl"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="10%"
                    android:layout_toRightOf="@+id/dqtgl"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/bjjg"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="表决结果:"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_bjjg"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="未通过"
                    android:layout_toRightOf="@+id/bjjg"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
